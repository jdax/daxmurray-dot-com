<% etc = app.data.etc %>
<% tiers = app.data.tier %>

<div class="pure-u-1"><h1><%= etc.ream.heading %></h1></div>
<%= image_tag(etc.ream.image, class: "shadow-effect") %>
<div class="pure-u-1 series-description">
	<p><%= etc.ream.description %></p>
	<div class="pure-u-1 purchase-button-group"><%= link_to("Join Today!", etc.ream.forwardlink, class:"purchase-button direct-purchase-button tier-button") %> 	<br/></div>
</div>
<%= image_tag(etc.ream.tier_image, class: "shadow-effect") %>
<p> </p>
<% tiers.each do | tier |%>
	<div class="pure-g">
	<br/>
	<hr class="horizontal-line">
	<br/>
		<div class="pure-u-1 pure-u-md-1-3 profile-img-container">
			<%= image_tag(tier.image, class: "shadow-effect") %>
		</div>
		<div class="pure-u-1 pure-u-md-2-3">
			<h3 class="bio-text"><%= tier.name %></h3>
			<p class="bio-text"><b><%= tier.price %></b></p>
			<p class="bio-text"><%= tier.description %></p>
		</div>
	</div>
	<br/>
<% end %>
<div>
<h2>April Content Release Schedule</h2>
<div class="pure-g">
<div class="pure-u-1 pure-u-sm-2-3"><img src="/images/dreaming/April.png" class="shadow-effect" alt="Calender with crystals on the edges and color coded dates. See written schedule." /></div>
<div class="pure-u-1 pure-u-sm-1-3">
	<ul>
		<li>1 Episode of "The Last Page" Every Sunday, Wednesday, and Saturday!</li>
		<li>1 Chapter of "Smoke and Steel" Every Friday for Enchanters, Arcanists, and Witches; every other Friday for Sorcerers! </li>
		<li>Bonus Content Every Tuesday for Enchanters, Arcanists, and Witches; every other Tuesday for Seekers! </li>
		<li>1 illustrated poem from the Definitive Edition of Birthing Orion on Monday's and Thursdays!</li>
		<li>Surprises always sprinkled throughout the month!</li>
	</ul>
	<img src="/images/the-last-page/last_page_promo_image_season_1.png" class="shadow-effect" style="max-width: 82%;">
</div>
</div>
<br/>
</div>
