<% get_latest %>
<% get_coming_soon %>
<div class="pure-g home-page">

    <div class="pure-u-1 pure-u-lg-1-2 book-card">
      <div class="pure-g">
        <div class="pure-u-1">
          <h1 class="release-type"> Latest Release <h1>
        </div>
        <div class="pure-u-1">
          <h2 class="title-link"><%= link_to(@latest_release.title.to_s, @latest_release.slug) %></h2>
        </div>
        <div class="pure-u-1">
          <h3><%= @latest_release.intro_hook %></h3>
        </div>
        <div class="pure-u-1">
          <!-- <%= image_tag(@latest_release.cover_3d, height: '500', class: "book-card-img") %> -->
          <%= @latest_release.animated_3d_cover %>
        </div>
      <br />  
        <div class="pure-u-1">
          <h3> <%= @latest_release.exit_hook %> </h3>
        </div>
        <div class="pure-u-1 purchase-button-group">
          <% if !@latest_release.purchase_direct.nil? %>
              <%= link_to("Buy Now", @latest_release.purchase_direct, class:"lemonsqueezy-button direct-purchase-button") %>
          <% end %>
          <br/>
          
          <% @latest_release.purchase_links.each do |name, link |%>
          <h3>Purchase Elsewhere:</h3>
            <%= link_to(name, link, class: "purchase-button") %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="pure-u-1 pure-u-lg-1-2 book-card">
      <div class=pure-g>
        <div class="pure-u-1">
          <h1 class="release-type"> Coming May 15th, 2024 <h1>
        </div>
        <div class="pure-u-1">
          <h2 class="title-link"><%= link_to(@coming_soon.title.to_s, @coming_soon.slug) %></h2>
        </div>
        <div class="pure-u-1">
          <h3> <%= @coming_soon.intro_hook %> </h3>
        </div>
        <div class="pure-u-1">
          <!-- <%= image_tag(@coming_soon.cover_3d, height: '500', class: "book-card-img") %> -->
          <%= @coming_soon.animated_3d_cover %>
        </div>
          <br/>
        <div class="pure-u-1">
          <h3> <%= @coming_soon.exit_hook %> </h3>
        </div>
        <% if !@coming_soon.purchase_links.nil? %>
        <div class="pure-u-1 purchase-button-group">
          <% @coming_soon.purchase_links.each do |name, link |%>
            <%= link_to(name, link, class: "purchase-button") %>
          <% end %>
        </div>
        <% end %>
      </div>
    </div>
</div>

<hr class="horizontal-line">

