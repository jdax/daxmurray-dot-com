---
layout: layout
---

<% book = locals[:b] %>
  <h1> <%= book.title %> </h1>
  <h2> <%= book.intro_hook %></h2>
  <p> <%= book.main_description %> </p>
  <br />
  <h2> <%= book.exit_hook %> </h2>
  <p>

<div class="blog-body">
  <div class="pure-g">
    <div class="pure-u-1 pure-u-sm-1-4">
      <div class="promo-bar">
        <div class="promo">
          <div class="promo-img page-promo-img">
              <%= tag :img, :src => book.cover_flat %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <p>Cover: <%= link_to(book.cover_art.name, book.cover_art.link)%>
</div>

 