---
layout: layout
---

<% book = locals[:b] %>
<% @title = "#{book.title} - Dax Murray" %>
<div class="book-page">
  <h3> <a href="/">Home</a> // <a href="/books">Books</a> // <%= link_to(book.title, book.slug)%> </h3>
  <h1 class="book-page-title-small-screen"> <%= book.title %> </h1>

  <div class="pure-g">
    <div class="pure-u-1 pure-u-sm-1-2 pure-u-md-1-3">
      <%= image_tag(book.cover_flat, class: "book-card-img") %>
  </div>

    <div class="pure-u-1 pure-u-sm-1-2 pure-u-md-2-3 center-parent">
      <h1 class="book-page-title-large-screen center-child"> <%= book.title %> </h1>
      <h3 class="book-page-intro-hook-large-screen center-child"> <%= book.intro_hook %></h3>
      <h4 class="center-child"> <% if book.is_series == true %><%= book.series_name %><% end %> </h4>
    </div>
  </div>

  <div>

  <div class="pure-g">
    <div class="pure-u-1">
      <h3 class="book-page-intro-hook-small-screen"> <%= book.intro_hook %></h3>
    <p> <%= book.main_description %> </p>
    </div>
  <br />
    <div class="pure-u-1">
      <h4> <%= book.exit_hook %> </h4>
    </div>
  </div>

  <div class="book-review">
    <% if !book.review.nil? %>
      <p class="review-text"><%= book.review.review_text %></p>
      <p class="review-author"><%= book.review.review_author %>
    <% end %>
  </div>

  <div class="pure-g">
    <div class="pure-u-1 pure-u-sm-1-2">
      <% if !book.cover_art.nil? %>
        <p>Cover: <%= link_to(book.cover_art.name, book.cover_art.link)%> </p>
      <% end %>
      <% if !book.typography.nil? %>
        <p> Typography: <%= link_to(book.typography.name, book.typography.link )%></p>
      <% end %>
    </div>

    <div class="pure-u-1 pure-u-sm-1-2">
      <% if !book.interior_design.nil? %>
        <p>Interior Design: <%= link_to(book.interior_design.name, book.interior_design.link) %></p>
      <% end %>
      <% if !book.interior_illustrations.nil? %>
        <p>Interior Illustrations: <%= link_to(book.interior_illustrations.name, book.interior_illustrations.link) %></p>
      <% end %>
      <% if !book.editor.nil? %>
        <p>Editor: <%= link_to(book.editor.name, book.editor.link) %></p>
      <% end %>
    </div>
  </div>

    <div class="pure-u-1 purchase-button-group">
      <% if !book.purchase_direct.nil? %>
        <%= link_to("Buy Now", book.purchase_direct, class:"lemonsqueezy-button direct-purchase-button") %>
    <% end %>
<br/>
        <% if !book.purchase_links.nil? && !book.purchase_direct.nil? %>
          <h3>Purchase Elsewhere:</h3> <!-- this is here because of STARS AND SOIL right now since it doesn't have a "purchase direct" and there's nowhere else to purchase it and SMOKE has no purchase links at all soo -->
        <% end %>
  <% if !book.purchase_links.nil? %>
  <div class="purchase-button-group">
      <% book.purchase_links.each do |k, v |%>
        <div class="pure-u-1 pure-u-sm-1-2 pure-u-md-1-4 pure-u-lg-1-6"><p><%= link_to(k, v, class: "purchase-button") %></p></div>
      <% end %>
  </div>
  <% end %>

</div>

 